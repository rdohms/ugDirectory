<?php 

$messager = Zend_Controller_Action_HelperBroker::getStaticHelper('flashMessenger');
$messages = $messager->getMessages();

$has_msg = (count($messages) > 0)? true:false;

?>

<?php if ($has_msg): ?>
<div id="flash_div">
	<?php foreach($messages as $msg):?>
	<?php echo $msg; ?>
	<?php endforeach; ?>
</div>
<script>
	$(document).ready(function(){
		
		$('#flash_div').show('slide', { direction: 'up'}, 1000);
		$('#flash_div').dropShadow();

		setTimeout('$("#flash_div").hide("slide", {direction: "up"}, 1000)',10000);
		
	});
</script>

<?php endif; ?>